#!/system/bin/sh
busybox crond -b -c /system/etc/cron.d&
fstrim -v /system >> /sdcard/log
fstrim -v /data >> /sdcard/log
if test -f /etc/passwd
then
        sleep 1
else
        mount -o remount,rw -t auto /system
        echo "root:x:0:0::/system/etc/cron.d:/system/bin/sh" > /system/etc/passwd
        echo "root:x:0:root" > /system/etc/group
        echo "root:*:12410:0:99999:7:::" > /system/etc/shadow
        mount -o remount,ro -t auto /system
fi

if test -f /bin/sh
then
        sleep 1
else
        mount -o remount,rw rootfs /
        ln -s /system/bin/ /bin
        mount -o remount,ro rootfs /
fi
